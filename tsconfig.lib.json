{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "types": ["node", "vite/client"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/index.ts", "src/cli.ts", "src/engine", "src/lib", "src/types"],
  "exclude": [
    "src/lib/supabase.ts",
    "src/lib/llmClient.ts",
    "src/lib/storage.ts",
    "src/lib/voting.ts",
    "src/components",
    "src/pages",
    "src/App.tsx",
    "src/main.tsx"
  ]
}
